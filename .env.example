# Environment Variables Template
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_URL=http://localhost:5000/api

# MongoDB
MONGODB_URI=mongodb://localhost:27017/shapesway
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shapesway

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# OpenAI API (optional - for enhanced chatbot)
OPENAI_API_KEY=your_openai_key_here

# Analytics (optional)
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# WhatsApp Business API (optional)
WHATSAPP_API_KEY=your_whatsapp_api_key

# Admin Panel
ADMIN_EMAIL=admin@shapesway.in
ADMIN_PASSWORD=change_this_password

# CORS Origins
ALLOWED_ORIGINS=http://localhost:5173,https://shapesway.in

# Server Port
PORT=5000
